<!DOCTYPE html>
<html>
<head>
  <title>Beefboardt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

  <div class="container-fluid">
    <a class="navbar-brand" href="/">BeefBoardt</a>

          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "All Events", events_path %></li>
            <li><% if user_signed_in? %>
                  <%= link_to "My Events", user_path(current_user) %>
                <% end %>
              </li>
              <li>
               <% if user_signed_in? %>
                 <%= link_to "Sign Out", destroy_user_session_path, :method => :delete  %></li>
                <% else %>
                  <%= link_to "Sign In", sign_in_path %></li>
               <%end%>
              </li>
          </ul>

</div>
</nav>


  <% if user_signed_in? %>
    <li>
    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
    </li>
  <% else %>
    <li>
    <%= link_to('Login', new_user_session_path)  %>
    </li>
  <% end %>
  <br>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>



      <div class="container">
        <%= yield %>
      </div>

</body>
</html>
