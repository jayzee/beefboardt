<!DOCTYPE html>
<html>
<head>
  <title>Beefboardt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <nav class="navbar-default navbar mainNav">
    <div class="fluid-nav">
      <a class="navbar-brand" href="/">BeefBoardt</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "All Events", events_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "My Events", user_path(current_user) %></li>
          <li> <%= link_to "Hello, #{current_user.name_w_initial}", user_path(current_user) %></li>
          <li id="addpaddingright"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete  %></li>
        <% else %>
          <li><%= link_to "Sign In", sign_in_path %></li>
        <%end%>
      </ul>
    </div>
  </nav>
  <br><br>

  <% unless current_page?('/') %>
    <%= flash[:notice] %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>  
  <% end %>

        <%= yield %>
</body>
</html>
