  <div class="container">
      <% if current_user && current_user.is_the_user_a_host(event) %>
          You are the host!
        <%= link_to "Edit this event", edit_event_path %> | <%= link_to 'Delete this event', event, method: :delete,  data: { confirm: 'Are you sure?' } %>
      <% elsif current_user && current_user.is_the_user_an_attendee(event) %>
        <p>You are planning on attending this event!</p>
      <% else %>
        <%= form_tag(attend_event_path, method: 'POST') do %>
          <p><%= label_tag "Would you like to attend?" %>
              <%= hidden_field_tag :user_id, current_user.id if current_user %>
        <%= submit_tag "Attend!" %></p>
        <% end %>
      <% end %>
  </div>


<div class="row">
        <h2><%= event.name %></h2>
          <div class="col-md-6">
          <ul>
            
            <li>location: <%= event.location if event.location%></li>
            <li>when: <%= event.event_time.strftime('%A, %B %Cth @ %l:%M%p') if event.event_time%></li>
            <li>description: <%= event.description if event.description%></li>
            <li>Per Person Cost: <%= event.cost_per_person if event.cost_per_person%></li>
            <li>Flat cost: <%= event.flat_cost if event.flat_cost%></li>
            <li>signup deadline: <%= event.signup_deadline.strftime('%A, %B %Cth @ %l:%M%p') if event.signup_deadline%></li>

            <% if event.tags %>
            <li>Tags: <ul><% event.tags.each do |tag| %>
              <li><%= link_to tag.name, controller: "events", tag: "#{tag.name.downcase}" %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
    </div>

    <div class="container">
      <% if event.confirmed %>
      <h3>This event is confirmed! </h3>
      <% else %>
      <h3>To be confirmed, this event needs <%= event.minimum_attendees - event.attendee_count %> slackbeefers to sign up...</h3>
      <% end %>
    </div>

  <div class="container">
    <h3>Hosted by: <%= event.host_name %></h3>
  </div>

  <div class="container">
  <h3>Who's attending?</h3>
  <ul><% event.attendees.each do |attendee| %>
    <li><p><%= attendee.name_w_initial %></p></li>
  <% end %></ul>
</div>

