<% unless params[:query].present? || params[:tags].present? %>
  Search events:
  <%= form_tag events_path, method: 'GET' do %>
    <%= text_field_tag :query %>
    <%= submit_tag 'Search' %>
  <% end %>
  Browse by tags:
    <%= form_tag events_path, method: 'GET' do |f|%>
    <%= collection_check_boxes(nil, :tags, Tag.all, :name, :name) %>
    <%= submit_tag 'Filter' %>
  <% end %>
<% end %>

<%= render partial: "events/snapshot", collection: @events, :as => :event %>